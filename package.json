{
    "name": "martin-lib",
    "version": "0.0.4",
    "description": "Library of components for React",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "types": "dist/index.d.ts",
    "scripts": {
        "clean": "rm -rf dist",
        "build": "npm run lint && npm run clean && rollup -c && tsc",
        "format": "prettier --write src/**/*.ts{,x}",
        "lint": "tsc --noEmit && eslint src/**/*.ts{,x}",
        "test": "jest --coverage=false --verbose --detectOpenHandles",
        "test:coverage": "jest --coverage=true --verbose --detectOpenHandles",
        "test:watch": "jest --watch --coverage=false --detectOpenHandles",
        "test:debug": "jest -o --watch --coverage=false --detectOpenHandles",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/miguelmartinpas/martin-lib.git"
    },
    "author": "Miguel Mart√≠n",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/miguelmartinpas/martin-lib/issues"
    },
    "homepage": "https://github.com/miguelmartinpas/martin-lib#readme",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "npm run format",
            "git add"
        ]
    },
    "dependencies": {
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "typescript": "^4.1.2"
    },
    "devDependencies": {
        "@babel/core": "^7.12.9",
        "@storybook/addon-actions": "^6.1.11",
        "@storybook/addon-essentials": "^6.1.11",
        "@storybook/addon-links": "^6.1.11",
        "@storybook/preset-scss": "^1.0.3",
        "@storybook/react": "^6.1.11",
        "@types/enzyme": "3.10.8",
        "@types/enzyme-adapter-react-16": "1.0.6",
        "@types/react": "^17.0.0",
        "@typescript-eslint/eslint-plugin": "^4.9.1",
        "@typescript-eslint/parser": "^4.9.1",
        "@wojtekmaj/enzyme-adapter-react-17": "0.3.2",
        "babel-loader": "^8.2.2",
        "enzyme": "3.11.0",
        "enzyme-adapter-react-16": "1.15.5",
        "enzyme-to-json": "3.6.1",
        "eslint": "^7.2.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-config-airbnb-typescript": "^12.0.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.3",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.2.0",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.0.0",
        "husky": "^4.3.5",
        "jest": "^26.6.3",
        "jest-css-modules": "^2.1.0",
        "jest-enzyme": "^7.1.2",
        "jest-fetch-mock": "3.0.3",
        "less": "^3.13.0",
        "less-loader": "^7.1.0",
        "lint-staged": "^10.5.3",
        "postcss": "^8.1.14",
        "prettier": "^2.2.1",
        "rollup": "^2.34.2",
        "rollup-plugin-postcss": "^4.0.0",
        "rollup-plugin-typescript2": "^0.29.0",
        "ts-jest": "26.4.4"
    }
}
